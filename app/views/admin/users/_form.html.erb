<%= form_with(model: [:admin, user], local: true, class: "user-form") do |form| %>
  <% if user.errors.any? %>
    <div class="error-messages">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-row">
    <div class="form-group">
      <%= form.label :firstname %>
      <%= form.text_field :firstname, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :lastname %>
      <%= form.text_field :lastname, class: "form-control", required: true %>
    </div>
  </div>



  <div class="form-row">
    <div class="form-group">
      <%= form.label :username %>
      <%= form.text_field :username, class: "form-control", placeholder: "Optional - leave blank for auto-generation" %>
    </div>

    <div class="form-group">
      <%= form.label :email %>
      <%= form.email_field :email, class: "form-control", required: true %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field :password, class: "form-control" %>
      <% if user.persisted? %>
        <small class="form-text">Leave blank to keep current password</small>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :image_url, "Profile Image URL" %>
    <%= form.text_field :image_url, class: "form-control", placeholder: "https://example.com/image.jpg" %>
  </div>

  <div class="form-group">
    <%= form.label :about, "About/Bio" %>
    <%= form.text_area :about, class: "form-control", rows: 4, placeholder: "Tell us about this person..." %>
  </div>

  <div class="form-group">
    <%= form.label :director_title, "Director Title" %>
    <%= form.text_field :director_title, class: "form-control", placeholder: "e.g., President, Vice President, Treasurer" %>
    <small class="form-text">Only shown if user is a director</small>
  </div>

  <div class="form-row">
    <div class="form-group checkbox-group">
      <%= form.label :admin do %>
        <%= form.check_box :admin %>
        Admin User
      <% end %>
      <small class="form-text">Admin users can access the admin dashboard</small>
    </div>

    <div class="form-group checkbox-group">
      <%= form.label :director do %>
        <%= form.check_box :director %>
        Board Director
      <% end %>
      <small class="form-text">Directors will appear on the Board of Directors page</small>
    </div>

    <div class="form-group checkbox-group">
      <%= form.label :world_cup_selection_committee do %>
        <%= form.check_box :world_cup_selection_committee %>
        World Cup Selection Committee
      <% end %>
      <small class="form-text">Committee members help select World Cup participants</small>
    </div>
  </div>

  <div class="form-actions">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", admin_users_path, class: "btn btn-outline" %>
  </div>
<% end %> 