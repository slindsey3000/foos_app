<div class="admin-user-show-page">
  <div class="container">
    <div class="page-header">
      <h1>User Details</h1>
      <p>View user information</p>
    </div>

    <div class="user-details">
      <div class="user-profile">
        <div class="user-info">
          <h2><%= @user.fullname %></h2>
          <% if @user.username.present? %>
            <p class="user-username">@<%= @user.username %></p>
          <% end %>
          <p class="user-email"><%= @user.email %></p>
          <p class="user-phone"><%= @user.display_phone %></p>
          
          <div class="user-roles">
            <% if @user.admin? %>
              <span class="badge badge-admin">Admin</span>
            <% end %>
            <% if @user.director? %>
              <span class="badge badge-director">Director</span>
              <% if @user.director_title.present? %>
                <span class="badge badge-director-title"><%= @user.director_title %></span>
              <% end %>
            <% end %>
            <% if @user.world_cup_selection_committee? %>
              <span class="badge badge-committee">World Cup Committee</span>
            <% end %>
          </div>
          
          <% if @user.about.present? %>
            <div class="user-about">
              <h3>About</h3>
              <p><%= @user.about %></p>
            </div>
          <% end %>
          
          <div class="user-meta">
            <p><strong>Joined:</strong> <%= @user.created_at.strftime("%B %d, %Y") %></p>
            <p><strong>Last Updated:</strong> <%= @user.updated_at.strftime("%B %d, %Y") %></p>
          </div>
        </div>
      </div>

      <div class="user-actions">
        <%= link_to "Edit User", edit_admin_user_path(@user), class: "btn btn-secondary" %>
        <%= link_to "Back to Users", admin_users_path, class: "btn btn-outline" %>
        <%= link_to "Delete User", admin_user_path(@user), 
            method: :delete, 
            data: { confirm: "Are you sure you want to delete this user?" }, 
            class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
