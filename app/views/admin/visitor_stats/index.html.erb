<div class="visitor-stats-page">
  <div class="container mx-auto px-4 py-4">
  <div class="mb-6">
    <h1 class="text-2xl font-bold text-gray-900 mb-1">Visitor Statistics</h1>
    <p class="text-sm text-gray-600">Site traffic overview</p>
  </div>

  <!-- Summary Cards -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
    <div class="bg-white rounded-lg shadow p-4">
      <div class="flex items-center">
        <div class="text-blue-600 text-xl mr-3">üë•</div>
        <div>
          <p class="text-xs font-medium text-gray-600">Total Visitors</p>
          <p class="text-xl font-semibold text-gray-900"><%= @total_visitors %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-4">
      <div class="flex items-center">
        <div class="text-green-600 text-xl mr-3">üìä</div>
        <div>
          <p class="text-xs font-medium text-gray-600">Total Page Visits</p>
          <p class="text-xl font-semibold text-gray-900"><%= @total_page_visits %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-4">
      <div class="flex items-center">
        <div class="text-purple-600 text-xl mr-3">üìà</div>
        <div>
          <p class="text-xs font-medium text-gray-600">Avg Visits per Visitor</p>
          <p class="text-xl font-semibold text-gray-900">
            <%= @total_visitors > 0 ? (@total_page_visits.to_f / @total_visitors).round(1) : 0 %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Most Visited IPs -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-4 py-3 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Top 10 Active Visitors</h2>
      </div>
      <div class="p-4">
        <% if @most_visited_ips.any? %>
          <div class="space-y-2">
            <% @most_visited_ips.each_with_index do |visitor, index| %>
              <div class="flex items-center justify-between p-2 bg-gray-50 rounded">
                <div class="flex items-center">
                  <span class="text-xs font-medium text-gray-500 w-6"><%= index + 1 %></span>
                  <div>
                    <p class="text-sm font-medium text-gray-900"><%= visitor.ip_address %></p>
                    <p class="text-xs text-gray-500">
                      <%= visitor.last_visit&.strftime("%b %d, %I:%M %p") || "Never" %>
                    </p>
                  </div>
                </div>
                <div class="text-right">
                  <p class="text-sm font-semibold text-blue-600"><%= visitor.visit_count %></p>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-gray-500 text-center py-4 text-sm">No visitor data available</p>
        <% end %>
      </div>
    </div>

    <!-- Most Visited Pages -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-4 py-3 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Top 10 Visited Pages</h2>
      </div>
      <div class="p-4">
        <% if @page_visits_by_path.any? %>
          <div class="space-y-2">
            <% @page_visits_by_path.each_with_index do |(path, count), index| %>
              <div class="flex items-center justify-between p-2 bg-gray-50 rounded">
                <div class="flex items-center">
                  <span class="text-xs font-medium text-gray-500 w-6"><%= index + 1 %></span>
                  <div>
                    <p class="text-sm font-medium text-gray-900"><%= path %></p>
                  </div>
                </div>
                <div class="text-right">
                  <p class="text-sm font-semibold text-green-600"><%= count %></p>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-gray-500 text-center py-4 text-sm">No page visit data available</p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Recent Page Visits -->
  <div class="mt-6 bg-white rounded-lg shadow">
    <div class="px-4 py-3 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900">Recent 50 Page Visits</h2>
    </div>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase">IP Address</th>
            <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase">Page</th>
            <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase">Time</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @recent_page_visits.each do |visit| %>
            <tr>
              <td class="px-3 py-2 whitespace-nowrap">
                <div class="text-xs font-medium text-gray-900"><%= visit.ip_visitor.ip_address %></div>
                <div class="text-xs text-gray-500"><%= pluralize(visit.ip_visitor.visit_count, 'visit') %></div>
              </td>
              <td class="px-3 py-2 whitespace-nowrap">
                <div class="text-xs text-gray-900"><%= visit.page_path %></div>
              </td>
              <td class="px-3 py-2 whitespace-nowrap">
                <div class="text-xs text-gray-500"><%= visit.visited_at.strftime("%b %d, %I:%M %p") %></div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Back to Dashboard -->
  <div class="mt-6">
    <%= link_to admin_dashboard_path, class: "inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" do %>
      ‚Üê Back to Dashboard
    <% end %>
  </div>
  </div>
</div> 