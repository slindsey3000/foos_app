<header class="site-header">
  <div class="header-main">
    <div class="container">
      <a href="/" class="logo-link">
        <%= image_tag "USA_foosball_logo.png", alt: "USA Foosball Logo", class: "site-logo" %>
        <div>
          <h1 style="margin: 0; font-size: 1.5rem; color: #2563eb;">USA Foosball</h1>
          <span style="font-size: 0.9rem; color: #6b7280;">The United States Foosball Association</span>
        </div>
      </a>
      <!-- Desktop Auth -->
      <div class="header-auth desktop-only">
        <% if current_user %>
          <span class="welcome-message">Welcome <%= current_user.admin? ? "Admin " : "" %><%= current_user.fullname %>!</span>
          <%= link_to "Dashboard", current_user.admin? ? admin_dashboard_path : dashboard_path, class: "btn btn-primary" %>
          <%= link_to "Sign Out", logout_path, data: { method: :delete, confirm: "Are you sure you want to sign out?" }, class: "btn btn-secondary" %>
        <% else %>
          <a href="/signup" class="btn btn-primary">Become a Member</a>
          <a href="/signin" class="btn btn-outline">Sign In</a>
        <% end %>
      </div>
      
      <!-- Mobile Hamburger -->
      <div class="mobile-nav">
        <button class="hamburger-btn" id="hamburger-btn">
          <span class="hamburger-line"></span>
          <span class="hamburger-line"></span>
          <span class="hamburger-line"></span>
        </button>
        <div class="mobile-menu" id="mobile-menu">
          <ul>
            <% if current_user %>
              <li><a href="<%= current_user.admin? ? admin_dashboard_path : dashboard_path %>" class="mobile-dashboard-link">Dashboard</a></li>
            <% end %>
            <li><a href="/">Home</a></li>
            <li><a href="/news">News</a></li>
            <li><a href="/board">Board of Directors</a></li>
            <li><a href="/documents">Documents</a></li>
            <li><a href="/clubs">Where to Play</a></li>
            <li><a href="/brackets">Brackets</a></li>
            <% unless current_user %>
              <li><a href="/signin" class="mobile-auth-link">Sign In</a></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <nav class="main-navigation">
    <div class="container">
      <!-- Desktop Navigation -->
                        <ul class="desktop-nav">
                    <li><a href="/">Home</a></li>
                    <li><a href="/news">News</a></li>
                    <li><a href="/board">Board of Directors</a></li>
                    <li><a href="/documents">Documents</a></li>
                    <li><a href="/clubs">Where to Play</a></li>
                    <li><a href="/brackets">Brackets</a></li>
                  </ul>
    </div>
  </nav>
  

</header>
