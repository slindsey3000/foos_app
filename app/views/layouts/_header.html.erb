<header class="site-header">
  <div class="header-main">
    <div class="container" style="align-items: center; display: flex;">
      <a href="/" class="logo-link" style="display: flex; align-items: center; gap: 16px;">
        <%= image_tag "USA_foosball_logo.png", alt: "USA Foosball Logo", class: "site-logo" %>
        <div>
          <h1 style="margin: 0; font-size: 1.5rem; color: #2563eb;">USA Foosball</h1>
          <span style="font-size: 0.9rem; color: #6b7280;">The United States Foosball Association</span>
        </div>
      </a>
      <div class="header-auth">
        <% if session[:user_id] %>
          <% if current_user&.admin? %>
            <span class="welcome-message">Welcome Admin <%= current_user.username %>!</span>
            <a href="/admin/dashboard" class="btn btn-outline">Dashboard</a>
          <% else %>
            <span class="welcome-message">Welcome <%= current_user.username %>!</span>
          <% end %>
          <a href="/logout" class="btn btn-secondary">Sign Out</a>
        <% else %>
          <a href="/signin" class="btn btn-primary">Sign In</a>
        <% end %>
      </div>
    </div>
  </div>

  <nav class="main-navigation">
    <div class="container">
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/news">News</a></li>
        <li><a href="/board">Board of Directors</a></li>
        <li><a href="/documents">Documents</a></li>
        <li><a href="/locations">Where to Play</a></li>
      </ul>
    </div>
  </nav>
</header>
