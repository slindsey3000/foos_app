<%= form_with(model: club, local: true, class: "club-form") do |form| %>
  <% if club.errors.any? %>
    <div class="error-messages">
      <h2><%= pluralize(club.errors.count, "error") %> prohibited this club from being saved:</h2>
      <ul>
        <% club.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, "Club Name" %>
    <%= form.text_field :name, class: "form-control", required: true, placeholder: "Enter club name" %>
  </div>

  <div class="form-row">
    <div class="form-group">
      <%= form.label :address, "Street Address" %>
      <%= form.text_field :address, class: "form-control", required: true, placeholder: "123 Main Street" %>
    </div>

    <div class="form-group">
      <%= form.label :city %>
      <%= form.text_field :city, class: "form-control", required: true, placeholder: "City" %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group">
      <%= form.label :state %>
      <%= form.text_field :state, class: "form-control", required: true, placeholder: "State" %>
    </div>

    <div class="form-group">
      <%= form.label :zip_code, "ZIP Code" %>
      <%= form.text_field :zip_code, class: "form-control", required: true, placeholder: "12345" %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group">
      <%= form.label :phone %>
      <%= form.telephone_field :phone, class: "form-control", placeholder: "(555) 123-4567" %>
    </div>

    <div class="form-group">
      <%= form.label :email %>
      <%= form.email_field :email, class: "form-control", placeholder: "club@example.com" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :website %>
    <%= form.url_field :website, class: "form-control", placeholder: "https://www.clubwebsite.com" %>
  </div>

  <div class="form-group">
    <%= form.label :contact_person, "Administrator/Contact Person" %>
    <%= form.text_field :contact_person, class: "form-control", placeholder: "Name of club administrator or primary contact" %>
  </div>

  <div class="form-group">
    <%= form.label :day_and_time_info, "Playing Times" %>
    <%= form.text_area :day_and_time_info, class: "form-control", rows: 3, placeholder: "e.g., Monday and Wednesday evenings 7-10 PM, Saturday afternoons 2-6 PM" %>
    <small class="form-text">Describe when the club typically plays foosball</small>
  </div>

  <div class="form-group">
    <%= form.label :description, "Club Description" %>
    <%= form.text_area :description, class: "form-control", rows: 4, placeholder: "Tell us about this club, its history, facilities, and what makes it special..." %>
  </div>

  <div class="form-row">
    <div class="form-group">
      <%= form.label :image_url, "Club Image URL" %>
      <%= form.text_field :image_url, class: "form-control", placeholder: "https://example.com/club-image.jpg" %>
    </div>

    <div class="form-group">
      <%= form.label :coordinates, "GPS Coordinates (optional)" %>
      <%= form.text_field :coordinates, class: "form-control", placeholder: "40.7128, -74.0060" %>
      <small class="form-text">For Google Maps integration (latitude, longitude)</small>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :established_date, "Established Date" %>
    <%= form.date_field :established_date, class: "form-control" %>
  </div>

  <div class="form-actions">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", clubs_path, class: "btn btn-outline" %>
  </div>
<% end %>
