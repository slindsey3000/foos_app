<div class="change-password-page">
  <div class="container">
    <div class="page-header">
      <h1>Change Password</h1>
      <p>Update your account password.</p>
    </div>

    <div class="form-container">
      <%= form_with model: @user, url: update_password_path, method: :patch, local: true do |form| %>
        <% if @user.errors.any? %>
          <div class="alert alert-error">
            <h3><%= pluralize(@user.errors.count, "error") %> prohibited this password from being updated:</h3>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-section">
          <h3>Password Update</h3>
          
          <div class="form-group">
            <%= form.label :current_password, "Current Password" %>
            <%= form.password_field :current_password, class: "form-control", required: true %>
            <small class="form-text">Enter your current password to confirm the change.</small>
          </div>

          <div class="form-group">
            <%= form.label :password, "New Password" %>
            <%= form.password_field :password, class: "form-control", required: true %>
            <small class="form-text">Password must be at least 6 characters long.</small>
          </div>

          <div class="form-group">
            <%= form.label :password_confirmation, "Confirm New Password" %>
            <%= form.password_field :password_confirmation, class: "form-control", required: true %>
            <small class="form-text">Please confirm your new password.</small>
          </div>
        </div>

        <div class="form-actions">
          <%= form.submit "Update Password", class: "btn btn-primary" %>
          <%= link_to "Cancel", dashboard_path, class: "btn btn-outline" %>
        </div>
      <% end %>
    </div>
  </div>
</div> 