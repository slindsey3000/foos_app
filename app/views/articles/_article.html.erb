<div id="<%= dom_id article %>">
  <p>
    <strong>Title:</strong>
    <%= article.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= article.content %>
  </p>

  <p>
    <strong>Author:</strong>
    <%= article.author %>
  </p>

  <p>
    <strong>Published at:</strong>
    <%= article.published_at %>
  </p>

  <p>
    <strong>Featured:</strong>
    <%= article.featured %>
  </p>

  <p>
    <strong>Image url:</strong>
    <%= article.image_url %>
  </p>

  <p>
    <strong>Slug:</strong>
    <%= article.slug %>
  </p>

</div>
