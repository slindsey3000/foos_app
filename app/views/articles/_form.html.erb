<%= form_with(model: article, local: true, class: "article-form") do |form| %>
  <% if article.errors.any? %>
    <div class="error-messages">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>
      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :author %>
    <%= form.text_field :author, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :image_url, "Hero Image URL (optional)" %>
    <%= form.text_field :image_url, class: "form-control", placeholder: "https://example.com/image.jpg" %>
  </div>

  <div class="form-group">
    <%= form.label :content %>
    <%= form.rich_text_area :content, class: "form-control" %>
  </div>

  <div class="form-row">
    <div class="form-group">
      <%= form.label :published_at %>
      <%= form.datetime_local_field :published_at, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :featured do %>
        <%= form.check_box :featured %>
        Featured Article
      <% end %>
    </div>
  </div>

  <div class="form-actions">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", articles_path, class: "btn btn-outline" %>
  </div>
<% end %>
