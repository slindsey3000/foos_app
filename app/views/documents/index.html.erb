<div class="documents-page">
  <div class="container">
    <div class="page-header">
      <h1>Documents & Resources</h1>
      <p>Access important USA Foosball documents, forms, and resources</p>
    </div>

    <% if current_user&.admin? %>
      <div class="admin-actions">
        <%= link_to "Upload New Document", new_document_path, class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="documents-grid">
      <% if @documents.any? %>
        <% @documents.each do |document| %>
          <div class="document-card">
            <div class="document-icon">
              <span class="file-type-icon">
                <% case document.file_extension %>
                <% when '.pdf' %>
                  📄
                <% when '.doc', '.docx' %>
                  📝
                <% when '.xls', '.xlsx' %>
                  📊
                <% when '.ppt', '.pptx' %>
                  📈
                <% else %>
                  📎
                <% end %>
              </span>
            </div>
            
            <div class="document-content">
              <h3 class="document-title">
                <%= link_to document.title, document_path(document) %>
              </h3>
              
              <% if document.description.present? %>
                <p class="document-description"><%= truncate(document.description, length: 150) %></p>
              <% end %>
              
              <div class="document-meta">
                <span class="document-type"><%= document.file_type %></span>
                <span class="document-uploader">Uploaded by <%= document.uploaded_by %></span>
                <span class="document-date"><%= document.created_at.strftime("%B %d, %Y") %></span>
              </div>
              
              <div class="document-actions">
                <a href="<%= document.file_url %>" target="_blank" class="btn btn-sm btn-primary">
                  Download
                </a>
                
                <% if current_user&.admin? %>
                  <%= link_to "Edit", edit_document_path(document), class: "btn btn-sm btn-outline" %>
                  <%= link_to "Delete", document_path(document), 
                      method: :delete, 
                      data: { confirm: "Are you sure you want to delete this document?" }, 
                      class: "btn btn-sm btn-danger" %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="empty-state">
          <h3>No Documents Available</h3>
          <p>Documents and resources will be added here soon.</p>
          <% if current_user&.admin? %>
            <p><%= link_to "Upload the first document", new_document_path, class: "btn btn-primary" %></p>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
