<div class="signin-page">
  <div class="container">
    <div class="signin-container">
      <div class="signin-header">
        <h1>Sign In to USA Foosball</h1>
        <p>Access your account to manage tournaments, rankings, and more</p>
      </div>

      <% if flash[:alert] %>
        <div class="alert alert-error">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <% if flash[:notice] %>
        <div class="alert alert-success">
          <%= flash[:notice] %>
        </div>
      <% end %>

      <%= form_with url: signin_path, method: :post, local: true, class: "signin-form" do |f| %>
        <div class="form-group">
          <%= f.label :username, "Username" %>
          <%= f.text_field :username, required: true, placeholder: "Enter your username" %>
        </div>

        <div class="form-group">
          <%= f.label :password, "Password" %>
          <%= f.password_field :password, required: true, placeholder: "Enter your password" %>
        </div>

        <div class="form-actions">
          <%= f.submit "Sign In", class: "btn btn-primary btn-full" %>
        </div>
      <% end %>

      <div class="signin-footer">
        <p>Don't have an account? <a href="#" class="signup-link">Contact admin for access</a></p>
      </div>
    </div>
  </div>
</div>
